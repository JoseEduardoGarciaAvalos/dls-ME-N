extends ../layout

block content
  a(href="/bicicletas/create") Nueva bicicleta
  br
  br
  br
  h1 Lista de Bicicletas
  br
  br
  table.table
    thead
      tr
        th Code
        th Color
        th Modelo
        th Ubicacion
        th 
        th
      tbody
        each bici in bicis
          tr
            td= bici.code
            td= bici.color
            td= bici.modelo
            td= bici.ubicacion
            td
              a(href="/bicicletas/" + bici.code + "/update") Editar
            td
              form(method="post" action="/bicicletas/delete" )
                input(type="hidden" name="code" value=bici.code)
                button(type="submit")
                  = 'Eliminar'
